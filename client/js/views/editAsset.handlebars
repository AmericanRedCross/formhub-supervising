	<div class="form-group{{#neq type "webmap"}} active{{/neq}}{{#if type}}{{else}} active{{/if}}" id="form-file">
		{{#if file}}<p><b>Current:</b> <em>{{#if filename}}{{filename}}{{else}}{{file}}{{/if}}</em></p>{{/if}}
		{{#if thumbnail}}<p><img src="/api/asset/{{_id}}/thumbnail/200"></p>{{/if}}
		<label for="file">{{#if file}}Replace{{else}}Upload{{/if}} File</label>
		<input type="file" class="form-control" name="file" id="file" size="50">
	</div>
	<div class="form-group{{#eq type "webmap"}} active{{/eq}}" id="form-url">
		<label for="link">URL</label>
		<input type="text" class="form-control" name="link" id="link" data-rule-url="true"  value="{{link}}">
	</div>
</fieldset>
<fieldset>
	<legend>Tags</legend>
	<div class="form-group">
		<label for="sector">Sector(s)</label>
		<select class="form-control" id="sector" name="sector" required multiple>
			{{#each opts.sectors}}
				<option value="{{this}}"
				{{#each ../sector}}
					{{#eq this ../this}}
						selected
					{{/eq}}
				{{/each}}
				>{{this}}</option>
			{{/each}}
		</select>
	</div>	
	<div class="form-group">
		<label for="extent">Extent(s)</label>
		<select class="form-control" id="extent" name="extent" required multiple>
			{{#each opts.extents}}
				<option value="{{this}}"
				{{#each ../extent}}
					{{#eq this ../this}}
						selected
					{{/eq}}
				{{/each}}
				>{{this}}</option>
			{{/each}}
		</select>
	</div>
</fieldset>	